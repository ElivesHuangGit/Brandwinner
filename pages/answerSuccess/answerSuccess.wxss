.brand-banner {
  width: 100%;
  height: 320rpx;
  background: #43619f;
  padding-bottom: 27rpx;
}
.pageBg{
  background: #f5f5f5;
}
.ans-result {
  width: 100%;
  height: 357rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  background: #f5f5f5;
}

.ans-succe-bg {
  margin: 40rpx 0 28rpx 0;
  width: 478rpx;
  height: 298rpx;
}

.head-portrait {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 2rpx solid #c3c4c3;
  position: absolute;
  top: 90rpx;
  left: 325rpx;
  background-size: cover;
}

.user-name {
  position: absolute;
  top: 39rpx;
  left: 50%;
  transform: translate(25%, 0);
  font-size: 14px;
}

.time-tag {
  position: absolute;
  top: 82rpx;
  right: 161rpx;
  color: #f6635f;
  transform: rotate(-10deg);
}

.fail-result {
  background: #f5f5f5;
  width: 100%;
  min-height: 480rpx;
}

.active-rule {
  width: 100%;
  height: 52rpx;
  border-bottom: 1rpx solid #e5e5e5;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-bottom: 10rpx;

}

.rule-icon {
  width: 24rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

.rule-text {
  color: #999;
  font-size: 12px;
  width: 105rpx;
  height: 28rpx;
  text-align: center;
  margin-top: -8rpx;
}

.score {
  width: 100%;
  height: 132rpx;
  display: flex;
  align-items: center;
}

.short-time, .current-rank {
  width: 350rpx;
  height: 140rpx;
  margin: 28rpx auto 0;
  text-align: center;
}

.divide-line {
  width: 50rpx;
  height: 140rpx;
}

.font-14 {
  font-size: 14px;
  color: #999;
  margin-bottom: 14rpx;
}

.font-16 {
  font-size: 16px;
  color: #999;
}

.divide-line image {
  width: 2rpx;
  height: 140rpx;
  margin-left: 25rpx;
}

.encourage {
  height: 80rpx;
  width: 100%;
  text-align: center;
  margin: 0rpx 0 0rpx 0;
}

.font-18 {
  font-size: 18px;
}

.color-yellow {
  color: #ffc000;
}

.color-red {
  color: #f6635f;
}

.ans-again {
  width: 400rpx;
  height: 98rpx;
  border-radius: 10rpx;
  background: #f6635f;
  margin: 0 auto;
  color: #fff;
  font-size: 18px;
}

.life-card {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: nowrap;
  margin-top: 10rpx;
}

.life-card image {
  width: 52rpx;
  height: 42rpx;
  margin-right: 12rpx;
}

.life-card button {
  font-size: 16px;
  font-family: "黑体";
  color: #000;
  margin: 0;
  padding: 0;
  border: none;
  height: 44rpx;
  line-height: 100%;
  padding-top:8rpx;
}
.life-card button{
  line-height: 110%;
}

.ans-fail-bg {
  margin: 84rpx 0 12rpx 0;
  width: 452rpx;
  height: 262rpx;
}

.fail-result {
  background: #f5f5f5;
  width: 100%;
  min-height: 480rpx;
}

.red {
  color: #f6635f;
}

.userinfo {
  width: 100%;
  position: absolute;
  top: 47rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-top: 4rpx;
  border: 1px solid #d6d6d6;
}

.userinfo-nickname {
  font-size: 28rpx;
  margin-bottom: 6rpx;
}

.invit-row {
  width: 100%;
  height: 106rpx;
  color: #fff;
  font-size: 18px;
  position: relative;
  overflow: hidden;
}

.invite-btn {
  width: 400rpx;
  height: 98rpx;
  border-radius: 10rpx;
  background: #f6635f;
  text-align: center;
  line-height: 106rpx;
  color: #fff;
  font-size: 18px;
}

.care-us {
  width: 188rpx;
  height: 46rpx;
  background: #f4a049;
  border-radius: 46rpx;
  margin: 0 -20rpx 0 0;
  position: absolute;
  top: 0;
  right: -8rpx;
  border: none;
}

.care-us::after {
  border: none;
}

.care-us image {
  position: absolute;
  top: 10rpx;
  left: 9rpx;
  width: 32rpx;
  height: 26rpx;
}

.care-us text {
  color: #fff;
  position: absolute;
  top: -9rpx;
  left: 42rpx;
  font-size: 14px;
  text-align: center;
}
