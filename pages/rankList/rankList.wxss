/* pages/rankList/rankList.wxss */

.list-page {
  position: relative;
}

.rank-list-bg {
  width: 100%;
  height: 402rpx;
  position: fixed;
  z-index: 2;
  top: 0;
  background: #f5f5f5;
}

.list-view {
  width: 100%;
  min-height: 867rpx;
  height: auto;
  background: #f5f5f5;
  position: absolute;
  top: 402rpx;
}

.list-item {
  width: 100%;
  height: 109rpx;
  border-top: 1rpx solid #ccc;
  display: flex;
  align-items: center;
  flex-wrap: nowrap;
  position: relative;
}

.cup-style {
  width: 76rpx;
  height: 60rpx;
  margin: 0 28rpx 0 23rpx;
  position: relative;
}

.list-icon {
  width: 76rpx;
  height: 60rpx;
}

.rank-num {
  position: absolute;
  top: 44%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 14px;
}

.head-portrait {
  width: 58rpx;
  height: 58rpx;
  border-radius: 50%;
  border: 1rpx solid #cdcdcd;
  margin-right: 16rpx;
}

.money-num {
  color: #f6635f;
  margin-left: 360rpx;
}
.user-name{
  width:500rpx;
  position: absolute;
  top:26%;
  left:200rpx;
}